<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:textSize="22dp"
                android:text="Location information"
                android:textStyle="bold"
                android:textColor="@color/Black"/>
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Warehouse"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_warehouse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Distribution Code"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_code"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Address"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="City"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Phone"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="PIC"
                android:textSize="17dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginTop="4dp"
                android:id="@+id/add_loc_pic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>