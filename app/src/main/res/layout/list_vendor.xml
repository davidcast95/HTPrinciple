<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="10dp"
    android:paddingLeft="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_vendor_profil_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/order_box"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="12dp">
            <TextView
                android:id="@+id/list_vendor_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Prima International Cargo, PT"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/list_vendor_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:text="Perkantoran Delta Permai Blok B12, Surabaya, Panjang Jiwo, Tenggilis Mejoyo, Surabaya City, East Java 60299, Indonesia"/>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>